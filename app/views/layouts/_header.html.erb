<header class="navbar-wrapper">
  <div class="container">
    <div class="navbar navbar-static-top navbar-inverse">
      <div class="navbar-inner">
          
          <%= link_to root_path, class: "brand", id: "logo" do %>
              <!-- <%= image_tag('home_icon.png') %> --> Billion Bits Games
          <% end %>
          <nav>
            <ul class="nav pull-left divider-vertical">
              <li <% if yield(:current) == t('pages.home') %>class="active"<% end %>>
                <%= link_to t('pages.home'), home_path %></li>
              <li <% if yield(:current) == t('pages.about') %>class="active"<% end %>>
                <%= link_to t('pages.about'), about_path %></li>
              <li <% if yield(:current) == t('pages.contact') %>class="active"<% end %>>
                <%= link_to t('pages.contact'), contact_path %></li>
              <li <% if yield(:current) == t('pages.register') %>class="active"<% end %>>
                <%= link_to t('pages.register'), register_path %></li>
