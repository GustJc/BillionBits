<% provide(:current, t('pages.login')) %>
<h1> Sign in </h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>
      <%= label_tag :email %>
      <%= text_field_tag :email %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <%= submit_tag t('pages.login'), class: "btn btn-large btn-primary" %>

    <% end %>
    
    <p>New User? <%= link_to "Sign up now!", register_path %></p>
  </div>
</div>