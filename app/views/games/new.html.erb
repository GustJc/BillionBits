<% provide(:current, t('pages.games') ) %>
<h1><%= t('pages.games') %></h1>

<div class="row">
  <div class="span6 offset3">
    <% @object = @game %>
    <%= form_for(@game) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.submit "Create game", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
